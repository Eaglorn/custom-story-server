// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int          @id @default(autoincrement())
  email    String?      @unique
  password String?
  type     UserType     @default(user)
  balance  UserBalance?
}

enum UserType {
  admin
  moderator
  vip
  user
}

model UserBalance {
  id        Int     @id @default(autoincrement())
  real_coin Decimal @default(0.0) @db.Money
  game_coin Decimal @default(0.0) @db.Money
  user      User    @relation(fields: [user_id], references: [id])
  user_id   Int     @unique
}
